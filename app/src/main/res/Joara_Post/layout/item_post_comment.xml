<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llayout_container"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:background="@drawable/bg_shape_comment_wrap">

    <!-- 이미지 -->
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:padding="5dp">

        <ImageView
            android:id="@+id/comment_img"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginTop="6dp"
            android:background="@drawable/bg_shape_comment_img"
            android:padding="2px"
            android:scaleType="fitXY"
            android:src="@drawable/likeit_3" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="5dp"
        android:orientation="vertical">

        <!-- 작가명 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:orientation="horizontal"
            android:gravity="left|center_vertical">

            <TextView
                android:id="@+id/tview_item_comment_writer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/Contents_Text1"
                android:textSize="13sp"
                android:text="111111123213123123123123123123123123213123123123"
                android:singleLine="true"/>

            <LinearLayout
                android:id="@+id/llayoutModifyBaseView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tview_item_comment_edit"
                    android:layout_width="48dp"
                    android:layout_height="24dp"
                    android:layout_marginRight="2dp"
                    android:gravity="center"
                    android:text="@string/Post_Detail_Comment_Edit"
                    android:textColor="@color/Contents_Text4"
                    android:textSize="14sp"/>

                <View
                    android:layout_width="0.8dp"
                    android:layout_height="12dp"
                    android:background="#FF898989"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tview_item_comment_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:gravity="center"
                    android:text="@string/Post_Detail_Comment_Delete"
                    android:textColor="@color/Contents_Text4"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tview_item_comment_report"
                    android:layout_width="48dp"
                    android:layout_height="24dp"
                    android:gravity="center"
                    android:text="@string/Post_Detail_Comment_Report"
                    android:textColor="@color/Contents_Text4"
                    android:textSize="14sp"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/tview_item_comment_cancel"
                    android:layout_width="48dp"
                    android:layout_height="24dp"
                    android:gravity="center"
                    android:text="@string/Post_Detail_Comment_Cancel"
                    android:textColor="@color/Contents_Text4"
                    android:textSize="14sp"/>

                <View
                    android:id="@+id/tview_item"
                    android:layout_width="0.8dp"
                    android:layout_height="12dp"
                    android:background="#FF898989"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tview_item_comment_commit"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:gravity="center"
                    android:text="@string/Post_Detail_Comment_Commit"
                    android:textColor="@color/Contents_Text4"
                    android:textSize="14sp" />

            </LinearLayout>



        </LinearLayout>

        <!-- 등록일자 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:orientation="horizontal"
            android:gravity="left|center_vertical">

            <TextView
                android:id="@+id/tview_item_comment_created"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/Contents_Text4"
                android:textSize="14sp"
                android:singleLine="true"/>

        </LinearLayout>

        <!-- 코멘트 내용 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:orientation="horizontal"
            android:gravity="left|center_vertical">

            <TextView
                android:id="@+id/tview_item_comment_contents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/Contents_Text4"
                android:textSize="14sp"/>

            <EditText
                android:id="@+id/etext_item_comment_contents"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_comment_edittext"
                android:gravity="left|center_vertical"
                android:padding="10dp"
                android:textColor="@color/Contents_Text4"
                android:textSize="14sp"
                android:visibility="gone"
                tools:visibility="visible" />

        </LinearLayout>

        <!-- 수정 삭제 -->
        <RelativeLayout
            android:id="@+id/rlayout_item_comment_writer_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            >

            <LinearLayout
                android:id="@+id/llayoutModifySetView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:orientation="horizontal"
                android:gravity="center_vertical">



            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>