<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Comment_Contents"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:background="@drawable/bg_shape_comment_wrap"
    android:baselineAligned="false">

    <!-- 이미지 -->


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp">

        <ImageView
            android:id="@+id/Comment_Img"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginTop="6dp"
            android:background="@drawable/bg_shape_comment_img"
            android:contentDescription="@string/TODO"
            android:padding="2dp"
            android:scaleType="fitXY"
            android:src="@drawable/likeit_3" />

        <TextView
            android:id="@+id/Comment_Date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="4dp"
            android:singleLine="true"
            android:textColor="#757575"
            android:textSize="12sp" />
    </LinearLayout>




    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="5dp"
        android:orientation="vertical">

        <!-- 작가명 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:orientation="horizontal"
            android:gravity="start|center_vertical">

            <TextView
                android:id="@+id/Comment_Writer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/Contents_Text1"
                android:textSize="13sp"
                android:singleLine="true"/>

            <LinearLayout
                android:id="@+id/llayoutModifyBaseView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/Comment_EditBtn"
                    android:layout_width="48dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="2dp"
                    android:gravity="center"
                    android:text="@string/Post_Detail_Comment_Edit"
                    android:textColor="@color/Contents_Text4"
                    android:textSize="14sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/Comment_DelBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:gravity="center"
                    android:text="@string/Post_Detail_Comment_Delete"
                    android:textColor="@color/Contents_Text4"
                    android:textSize="14sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/Comment_CancelBtn"
                    android:layout_width="48dp"
                    android:layout_height="24dp"
                    android:gravity="center"
                    android:text="@string/Post_Detail_Comment_Cancel"
                    android:textColor="@color/Contents_Text4"
                    android:textSize="14sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/Comment_ApplyBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:gravity="center"
                    android:text="@string/Post_Detail_Comment_Commit"
                    android:textColor="@color/Contents_Text4"
                    android:textSize="14sp"
                    android:visibility="gone" />

            </LinearLayout>



        </LinearLayout>

        <!-- 등록일자 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:gravity="start|center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/Comment_ID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/Contents_Text4"
                android:textSize="14sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/User_ID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/Contents_Text4"
                android:textSize="14sp"
                android:visibility="gone" />

        </LinearLayout>

        <!-- 코멘트 내용 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:orientation="horizontal"
            android:gravity="start|center_vertical">

            <TextView
                android:id="@+id/Comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/Contents_Text4"
                android:textSize="14sp"/>

            <EditText
                android:id="@+id/Comment_EditText"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/bg_comment_edittext"
                android:gravity="start|center_vertical"
                android:padding="10dp"
                android:textColor="@color/Contents_Text4"
                android:textSize="14sp"
                android:visibility="gone"
                tools:ignore="SpeakableTextPresentCheck"
                tools:visibility="visible"
                android:inputType="text"
                android:importantForAutofill="no" />

        </LinearLayout>

        <!-- 수정 삭제 -->
        <RelativeLayout
            android:id="@+id/rlayout_item_comment_writer_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            >

            <LinearLayout
                android:id="@+id/llayoutModifySetView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:orientation="horizontal"
                android:gravity="center_vertical">

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>