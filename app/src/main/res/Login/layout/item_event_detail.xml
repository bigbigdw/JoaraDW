<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llayoutWrap"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp">


        <LinearLayout
            android:layout_width="131dp"
            android:layout_height="82dp"
            android:layout_marginEnd="15dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                 />

            <LinearLayout
                android:id="@+id/llayoutNull"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#26292E"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="horizontal"
                tools:visibility="visible">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/TODO"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/splash_logo" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:baselineAligned="false"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tviewTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:breakStrategy="high_quality"
                    android:ellipsize="end"
                    android:fontFamily="@font/noto_sans_bold"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="asdasdads" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tviewDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:breakStrategy="high_quality"
                        android:ellipsize="end"
                        android:fontFamily="@font/noto_sans"
                        android:maxLines="1"
                        android:textColor="#000000"
                        android:textSize="12sp"
                        android:visibility="visible"
                        tools:text="asdsadasda" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tviewCntRead"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:breakStrategy="high_quality"
                    android:ellipsize="end"
                    android:fontFamily="@font/noto_sans"
                    android:maxLines="1"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    android:visibility="visible"
                    tools:text="asdsadasda" />

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="1"
        android:background="#0D0E10"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="right|center_vertical|end"
        android:orientation="horizontal"
        android:visibility="visible">

        <View
            android:layout_width="1dp"
            android:layout_height="32dp"
            android:background="#0D0E10"
            android:visibility="visible" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:text="날짜"
            android:textAlignment="center"
            android:textColor="@color/Contents_Text1"
            android:textSize="14sp"
            android:textStyle="bold"
            android:visibility="visible" />

        <View
            android:layout_width="1dp"
            android:layout_height="32dp"
            android:background="#0D0E10"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tviewData"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical"
            android:text="조회 수"
            android:textAlignment="center"
            android:textColor="@color/Contents_Text1"
            android:textSize="14sp"
            android:textStyle="bold"
            android:visibility="visible" />

        <View
            android:layout_width="1dp"
            android:layout_height="32dp"
            android:background="#0D0E10"
            android:visibility="visible" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="1"
        android:background="#0D0E10"
        android:visibility="visible" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:visibility="visible">

    </androidx.recyclerview.widget.RecyclerView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="1"
        android:background="#0D0E10"
        android:visibility="visible" />

</LinearLayout>
