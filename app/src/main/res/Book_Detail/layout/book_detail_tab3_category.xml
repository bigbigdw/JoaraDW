<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="40dp">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="28dp">

            <LinearLayout
                android:id="@+id/WrapViewerSetting"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="10dp"
                    android:contentDescription="@string/TODO"
                    app:srcCompat="@drawable/icon_detail_7" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/BookDetail_Tab3_Icon5"
                    android:textAlignment="center"
                    android:textColor="@color/Contents_Text2"
                    android:textStyle="bold" />
            </LinearLayout>



            <LinearLayout
                android:id="@+id/WrapSupportCoupon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="10dp"
                    android:contentDescription="@string/TODO"
                    app:srcCompat="@drawable/icon_detail_8" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/BookDetail_Tab3_Icon2"
                    android:textAlignment="center"
                    android:textColor="@color/Contents_Text2"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/WrapBookOpinion"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="10dp"
                    android:contentDescription="@string/TODO"
                    app:srcCompat="@drawable/icon_detail_2" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/BookDetail_Tab3_Icon3"
                    android:textAlignment="center"
                    android:textColor="@color/Contents_Text2"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/WrapBookComment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="10dp"
                    android:contentDescription="@string/TODO"
                    app:srcCompat="@drawable/icon_detail_9" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/BookDetail_Tab3_Icon7"
                    android:textAlignment="center"
                    android:textColor="@color/Contents_Text2"
                    android:textStyle="bold" />
            </LinearLayout>


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="28dp">

            <LinearLayout
                android:id="@+id/WrapSupportList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="10dp"
                    android:contentDescription="@string/TODO"
                    app:srcCompat="@drawable/icon_detail_4" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Book_Supporter_Coupon"
                    android:textAlignment="center"
                    android:textColor="@color/Contents_Text2"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/WrapSupportList_ManuScript"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="10dp"
                    android:contentDescription="@string/TODO"
                    app:srcCompat="@drawable/icon_detail_4" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Book_Supporter_Manuscript"
                    android:textAlignment="center"
                    android:textColor="@color/Contents_Text2"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/WrapBookReport"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="10dp"
                    android:contentDescription="@string/TODO"
                    app:srcCompat="@drawable/icon_detail_3" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/BookDetail_Tab3_Icon6"
                    android:textAlignment="center"
                    android:textColor="@color/Contents_Text2"
                    android:textStyle="bold" />
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />


        </TableRow>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>