<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <include
            layout="@layout/toolbar_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/Contents_BG"
            android:orientation="vertical"
            android:padding="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@color/Contents"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/Writer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:paddingTop="14dp"
                    android:paddingRight="8dp"
                    android:paddingBottom="14dp"
                    android:text="@string/book_report_subject"
                    android:textColor="@color/PrimaryColor"  />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E6E6E6"
                    android:orientation="vertical" />

                <TextView
                    android:id="@+id/Subject"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:paddingTop="10dp"
                    android:paddingRight="8dp"
                    android:paddingBottom="10dp"
                    android:textColor="@color/PrimaryColor"
                    android:text="@string/book_report_writer"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/Contents"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingLeft="8dp"
                    android:paddingTop="14dp"
                    android:paddingRight="8dp"
                    android:paddingBottom="14dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/book_report_category1"
                        android:textColor="@color/PrimaryColor" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/book_report_category2"
                        android:textColor="@color/PrimaryColor"
                        android:textSize="13sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E6E6E6"
                    android:orientation="vertical" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RadioButton
                        android:id="@+id/Report_Radio1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="8dp"
                        android:onClick="onclickreport"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:textColor="@color/Contents_Text3"
                        android:text="@string/book_report_radio1"
                        android:theme="@style/ThemeOverlay.CheckBox" />

                    <RadioButton
                        android:id="@+id/Report_Radio2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="8dp"
                        android:onClick="onclickreport"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:textColor="@color/Contents_Text3"
                        android:text="@string/book_report_radio2"
                        android:theme="@style/ThemeOverlay.CheckBox" />

                    <RadioButton
                        android:id="@+id/Report_Radio3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="8dp"
                        android:onClick="onclickreport"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:textColor="@color/Contents_Text3"
                        android:text="@string/book_report_radio3"
                        android:theme="@style/ThemeOverlay.CheckBox" />

                    <RadioButton
                        android:id="@+id/Report_Radio4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="8dp"
                        android:onClick="onclickreport"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:textColor="@color/Contents_Text3"
                        android:text="@string/book_report_radio4"
                        android:theme="@style/ThemeOverlay.CheckBox" />

                    <RadioButton
                        android:id="@+id/Report_Radio5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="8dp"
                        android:onClick="onclickreport"
                        android:paddingTop="12dp"
                        android:textColor="@color/Contents_Text3"
                        android:paddingBottom="12dp"
                        android:text="@string/book_report_radio5"
                        android:theme="@style/ThemeOverlay.CheckBox" />
                </RadioGroup>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:paddingTop="10dp"
                    android:paddingRight="8dp"
                    android:paddingBottom="10dp"
                    android:text="@string/book_report_title1"
                    android:textColor="@color/Contents_Text3"
                    android:textSize="15sp" />

                <EditText
                    android:id="@+id/ReportDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="14dp"
                    android:background="@drawable/edittext_style1"
                    android:ems="10"
                    android:gravity="top"
                    android:hint="@string/book_report_title2"
                    android:minHeight="120dp"
                    android:minLines="2"
                    android:padding="8dp"
                    android:textColor="@color/Contents_Text3"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/BtnSubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#002635"
                android:fontFamily="@font/noto_sans_bold"
                android:text="@string/Btn_Book_Detail_Report"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
