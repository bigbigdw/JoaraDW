<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/ContentsLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/Contents_BG"
                android:orientation="vertical">

                <com.synnapps.carouselview.CarouselView
                    android:id="@+id/Carousel_MainBanner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#000000"
                    android:visibility="visible"
                    app:disableAutoPlayOnUserInteraction="false"
                    tools:visibility="visible">

                </com.synnapps.carouselview.CarouselView>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/MainBookListFirst"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/Contents" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical">

                    <com.synnapps.carouselview.CarouselView
                        android:id="@+id/Carousel_MainBanner_Mid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="#F9F9F9"
                        android:visibility="gone"
                        app:disableAutoPlayOnUserInteraction="false"
                        app:indicatorVisibility="gone"
                        tools:visibility="visible" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/MainBookListSecond"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="60dp"
                    android:background="@color/Contents" />


            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>