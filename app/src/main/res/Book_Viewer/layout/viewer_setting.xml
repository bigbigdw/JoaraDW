                            android:layout_height="wrap_content"
                            android:text="@string/Viewwer_Setting_Font"
                            android:textAlignment="center"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <Space
                            android:layout_width="20dp"
                            android:layout_height="wrap_content" />

                        <ImageView
