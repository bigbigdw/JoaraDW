<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Contents_BG"
    android:orientation="vertical"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:id="@+id/BookInfoWrap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="18dp"
        android:onClick="onClickGoDetail"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/Img_Wrap"
                android:layout_width="72dp"
                android:layout_height="104dp"
                android:layout_marginEnd="15dp"
                app:cardCornerRadius="6dp">

                <ImageView
                    android:id="@+id/Img_Book"
                    android:layout_width="91dp"
                    android:layout_height="132dp"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/TODO"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/booktest" />

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/BookContentsWrapC"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/BookCodeText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/Text_Title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:breakStrategy="high_quality"
                    android:ellipsize="end"
                    android:fontFamily="@font/noto_sans"
                    android:maxLines="3"
                    android:text="@string/Common_BookTitle"
                    android:textColor="@color/Contents_Text3"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/Text_Writer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:breakStrategy="high_quality"
                    android:ellipsize="end"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/noto_sans"
                    android:maxLines="1"
                    android:text="@string/Common_BookWriter"
                    android:textColor="@color/Contents_Text3"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:breakStrategy="high_quality"
                    android:ellipsize="end"
                    android:fontFamily="@font/noto_sans"
                    android:maxLines="3"
                    android:text="@string/Viewwer_Detail"
                    android:textColor="@color/Contents_Text3"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/TabWrap"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/Contents"
        android:orientation="vertical">

        <include
            layout="@layout/loading"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/BookChapterList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/Contents"
            android:visibility="gone" />

    </LinearLayout>
</LinearLayout>


